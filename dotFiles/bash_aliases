# Bash aliases for use on new linux systems

alias aliases='vim ~/.bash_aliases ; source ~/.bash_aliases'
alias ls='ls --color'
alias la='ls -Alh'
alias ll='ls -lh'
alias rm='rm -I --preserve-root -d -v'
alias venv='virtualenvwrapper'
alias venvstart='export WORKON_HOME=~/Virtualenvs ; source /usr/local/bin/virtualenvwrapper.sh'
alias lsvenv='lsvirtualenv'
alias cdvenv='cdvirtualenv'
alias mkvenv='mkvirtualenv'
alias rmvenv='rmvirtualenv'
alias ack='ack-grep'
alias dc='docker-compose'
alias dcr='docker-compose run --rm'
alias ppath='export PYTHONPATH=$(pwd)'
alias grep='grep -I --color'
alias volume='alsamixer'
alias screenshot='gnome-screenshot -w -d 5'
alias 2to3='2to3-3.7 -f all -f idioms -f ws_comma'
alias safeupgrade='sudo apt upgrade -y > ~/apt-upgrade-$(date -I).txt'
